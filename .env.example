# Gemini AI API Key
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Canva Connect API Credentials
# Get from: https://www.canva.com/developers/apps
CANVA_CLIENT_ID=your_canva_client_id_here
CANVA_CLIENT_SECRET=your_canva_client_secret_here
CANVA_REDIRECT_URI=http://localhost:5000/api/canva/callback

# ===========================================
# BLOCKCHAIN CONFIGURATION - Polygon Mumbai
# ===========================================

# RPC URL for Polygon Mumbai Testnet
# Option 1: Public RPC (may be rate limited)
# WEB3_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/demo
# Option 2: Get your own free API key from:
# - Alchemy: https://www.alchemy.com/ 
# - Infura: https://infura.io/
# - QuickNode: https://www.quicknode.com/
WEB3_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your-api-key

# Private Key for deploying and writing to blockchain
# IMPORTANT: Only use testnet wallets! Never use mainnet private keys here
# Get testnet MATIC from faucets:
# - https://faucet.polygon.technology/
# - https://mumbaifaucet.com/
# Format: 0x followed by 64 hex characters (without quotes)
PRIVATE_KEY=your_wallet_private_key_here

# Smart Contract Address (will be set after deployment)
# Run: node server/blockchain/deploy.js
# This will deploy the contract and provide the address
CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# API KEYS
# ===========================================

# Job Search API
# Get from: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=your_jsearch_api_key_here

# Session Secret (generate a random string)
SESSION_SECRET=your_session_secret_here
