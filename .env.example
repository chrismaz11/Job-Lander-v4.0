# Gemini AI API Key
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Canva Connect API Credentials
# Get from: https://www.canva.com/developers/apps
CANVA_CLIENT_ID=your_canva_client_id_here
CANVA_CLIENT_SECRET=your_canva_client_secret_here
CANVA_REDIRECT_URI=http://localhost:5000/api/canva/callback

# Web3 / Blockchain Configuration
# Get from: https://www.alchemy.com/ or https://infura.io/
# Example: https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
WEB3_RPC_URL=your_polygon_mumbai_rpc_url_here

# Optional: Private key for blockchain transactions (testnet only)
# PRIVATE_KEY=your_wallet_private_key_for_testnet

# Job Search API
# Get from: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=your_jsearch_api_key_here

# Session Secret (generate a random string)
SESSION_SECRET=your_session_secret_here

# Smart Contract Address (set after deployment)
# HASH_STORAGE_CONTRACT=0x...
